page {
  background-color: #fff;
}
.detail {
  padding: 20rpx 30rpx;
}
.detail .title {
  font-size: 40rpx;
  color: #262626;
  line-height: 70rpx;
  font-weight: bold;
}
.detail .info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.detail .info .source-date .source {
  color: #666;
}
.detail .info .source-date .date {
  color: #999;
  margin-left: 0rpx;
}
.detail .info .read {
  color: #999;
}
.detail .desc {
  margin-top: 56rpx;
  overflow: hidden;
  color: #262626;
}
.detail .desc .wxParse {
  color: #262626;
}
.comment {
  padding: 20rpx 32rpx 0;
  background: #fff;
}
.comment .title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #262626;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}
.comment .title text {
  padding-bottom: 20rpx;
  line-height: normal;
}
.comment .title .count {
  padding-bottom: 20rpx;
  font-size: 30rpx;
  color: #999;
  margin-left: 10rpx;
  line-height: normal;
}
.comment .item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0 20rpx;
  border-bottom: 1rpx solid #eee;
}
.comment .item:last-child {
  border-bottom: 0;
}
.comment .item .avatar {
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.comment .item .avatar image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
}
.comment .item .comment-info {
  flex-grow: 1;
  flex-shrink: 1;
}
.comment .item .comment-info .nickname-like {
  display: flex;
  justify-content: space-between;
}
.comment .item .comment-info .nickname-like .nickname {
  font-size: 28rpx;
  color: #666;
}
.comment .item .comment-info .comment-desc {
  color: #333;
  font-size: 28rpx;
  line-height: 1.4;
  margin-top: 10rpx;
}
.comment .item .comment-info .reply-count {
  background: #f2f2f2;
  padding: 0rpx 12rpx;
  font-size: 28rpx;
  color: #999;
  margin: 14rpx 0 14rpx;
}
.comment .item .comment-info .reply-count .item {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0 14rpx;
  border-bottom: 0;
}
.comment .item .comment-info .reply-count .item .comment-desc {
  margin-top: 5rpx;
}
.comment .item .comment-info .date-reply {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.comment .item .comment-info .date-reply .date {
  display: flex;
  align-items: center;
  color: #b4b4b4;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}
.comment .item .comment-info .date-reply .reply {
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 28rpx;
}
.comment .no-comment {
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}
.comment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: row;
  z-index: 10;
}
.comment-bar .input {
  flex-grow: 0;
  flex-shrink: 0;
  margin: 20rpx 10rpx 20rpx 20rpx;
  display: flex;
  align-items: center;
  background: #f2f2f2;
  width: 440rpx;
  border-radius: 40rpx 40rpx 0 40rpx;
}
.comment-bar .input text {
  font-size: 28rpx;
  color: #aaa;
  margin-left: 38rpx;
}
.comment-bar .operate {
  width: 100%;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-right: 10rpx;
  font-size: 45rpx;
  padding: 0 30rpx;
}
.comment-bar .operate view,
.comment-bar .operate navigator {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 25%;
}
.comment-bar .operate view image,
.comment-bar .operate navigator image {
  width: 45rpx;
  height: 45rpx;
}
.comment-bar .operate .info,
.comment-bar .operate .like {
  position: relative;
}
.comment-bar .operate .info .count,
.comment-bar .operate .like .count {
  position: absolute;
  top: -15rpx;
  right: -4rpx;
  background-image: linear-gradient(140deg, #ff5500 9%, #8cc7b5 75%);
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  padding: 0 10rpx;
  font-size: 22rpx;
  color: #fff;
  height: 30rpx;
  line-height: 30rpx;
}
.comment-bar .operate .share {
  display: flex;
  justify-content: space-around;
  padding: 0;
  background: transparent;
}
.comment-bar .operate .share image {
  width: 45rpx;
  height: 45rpx;
  border: 0;
}
.comment-bar .operate .share:after {
  display: none;
}
.add-comment {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 9999;
}
.add-comment .info {
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx 20rpx 10rpx;
}
.add-comment .info .input {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  align-items: center;
  background: #f2f2f2;
  border-radius: 20rpx 20rpx 0 20rpx;
  padding: 20rpx 32rpx 20rpx;
  line-height: normal;
}
.add-comment .info .input textarea {
  width: 100%;
  font-size: 28rpx;
  line-height: 32rpx;
  background: #f2f2f2;
}
.add-comment .info .add {
  flex-grow: 0;
  flex-shrink: 0;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-comment .info .cancel {
  position: absolute;
  right: 10rpx;
  top: 2rpx;
}
.add-comment .info .cancel .icon {
  font-size: 40rpx;
  color: #ccc;
}

